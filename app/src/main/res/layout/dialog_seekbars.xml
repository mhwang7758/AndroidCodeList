<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/normal_dialog"
    android:layout_width="400dp"
    android:orientation="vertical">
    <SeekBar
        style="@style/seekbar"
        android:progressDrawable="@drawable/shape_seekbar_background"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <SeekBar
        style="@style/seekbar"
        android:layout_marginTop="@dimen/margin_normal"
        android:progressDrawable="@drawable/seekbar_normal_background"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:thumb="@drawable/seekbar_thumb_selector"
        android:layout_height="wrap_content"/>

    <SeekBar
        style="@style/seekbar"
        android:layout_marginTop="@dimen/margin_normal"
        android:progressDrawable="@drawable/seekbar_normal_background"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:thumb="@drawable/little_man_thumb_selector"
        android:layout_height="wrap_content"/>

    <SeekBar
        style="@style/seekbar"
        android:layout_marginTop="@dimen/margin_normal"
        android:progressDrawable="@drawable/seekbar_gradual_change"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:thumb="@drawable/little_man_thumb_selector"
        android:layout_height="wrap_content"/>

    <SeekBar
        style="@style/seekbar"
        android:layout_marginTop="@dimen/margin_normal"
        android:progressDrawable="@drawable/seekbar_four_level_background"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:thumb="@drawable/little_man_thumb_selector"
        android:layout_height="wrap_content"/>

    <SeekBar
        style="@style/seekbar"
        android:layout_marginTop="@dimen/margin_normal"
        android:progressDrawable="@drawable/seekbar_four_level_background_strong"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:thumb="@drawable/seekbar_thumb_selector"
        android:layout_height="wrap_content"/>
</LinearLayout>